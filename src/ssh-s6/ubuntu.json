{
  "builders": [
    {
      "type": "docker",
      "image": "ubuntu:18.04",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"/init\"]",
        "EXPOSE 22",
        "ENV NOTVISIBLE \"in users profile\""
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "ansible_env_vars": [
        "ANSIBLE_DISTRIBUTION=debian"
      ],
      "playbook_file": "provision.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/jalbert/ubuntu",
        "tag": "18.04"
      },
      "docker-push"
    ]
  ]
}

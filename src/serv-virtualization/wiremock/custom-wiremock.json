{
  "builders": [
    {
      "type": "docker",
      "image": "jalbert/jdk:8-u231-debian",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"/init\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "provision-custom.yml",
      "ansible_env_vars": [
        "ANSIBLE_DISTRIBUTION=debian"
      ]
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/jalbert/custom-wiremock",
        "tag": "2.26.0-1.0.0"
      },
      "docker-push"
    ]
  ]
}

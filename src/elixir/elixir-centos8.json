{
  "builders": [
    {
      "type": "docker",
      "image": "jalbert/erlang:222-centos8",
      "commit": true,
      "changes": [
        "VOLUME /src",
        "WORKDIR /src",
        "ENV OSNAME centos",
        "ENTRYPOINT [\"entrypoint.sh\"]"
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "ansible_env_vars": [
        "ANSIBLE_DISTRIBUTION=centos",
        "ELIXIR_VERSION=1.9.4",
        "ERLANG_VERSION=22.2"
      ],
      "playbook_file": "provision.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/jalbert/elixir",
        "tag": "19-centos8"
      },
      "docker-push"
    ]
  ]
}

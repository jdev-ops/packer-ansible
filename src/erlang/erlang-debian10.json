{
  "builders": [
    {
      "type": "docker",
      "image": "debian:buster-slim",
      "commit": true
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "ansible_env_vars": [
        "ANSIBLE_DISTRIBUTION=debian",
        "ERLANG_VERSION=22.2"
      ],
      "playbook_file": "provision.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/jalbert/erlang",
        "tag": "222-debian10"
      },
      "docker-push"
    ]
  ]
}

{
  "builders": [
    {
      "type": "docker",
      "image": "jalbert/jdk:v8-u231-debian",
      "commit": true,
      "changes": [
        "ENTRYPOINT [\"/init\"]",
        "EXPOSE 22",
        "ENV NOTVISIBLE \"in users profile\""
      ]
    }
  ],
  "provisioners": [
    {
      "type": "ansible",
      "user": "root",
      "playbook_file": "provision.yml"
    }
  ],
  "post-processors": [
    [
      {
        "type": "docker-tag",
        "repository": "docker.io/jalbert/hadoop-base",
        "tag": "v3.2.1-debian"
      },
      "docker-push"
    ]
  ]
}
